{
  "manifest_version": 3,
  "name": "Comparador de Precios - Scraping de Falabella y Mercado Libre",
  "version": "1.0",
  "description": "Resumen de productos para comparar precios",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["http://localhost:3000/*"],
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.falabella.com.pe/*"],
      "js": ["content/falabella.js"]
    },
    {
      "matches": ["https://*.mercadolibre.com.pe/*"],
      "js": ["content/mercadoLibre.js"]
    }
  ]
}